{
  "name": "@dentalos/monorepo",
  "version": "0.1.0",
  "description": "Dental OS - Next-generation dental practice management platform",
  "private": true,
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "assemble:env:nix": "sort -u -t '=' -k 1,1 .env .env.example 2>/dev/null | grep -v '^$\\|^\\s*#' > .env.tmp && mv .env.tmp .env || cp .env.example .env",
    "assemble:env:win32": "sort -u -t '=' -k 1,1 .env .env.example 2>nul | grep -v '^$\\|^\\s*#' > .env.tmp && move .env.tmp .env || copy .env.example .env",
    "assemble:env": "run-script-os",
    "assemble:env-docker:nix": "./sync-env.sh .env.docker",
    "assemble:env-docker:win32": "bash sync-env.sh .env.docker",
    "assemble:env-docker": "run-script-os",
    "assemble:env:all": "npm run assemble:env-docker",
    "setup:nix": "pnpm install && pnpm run build:packages:ordered && pnpm run assemble:env:all",
    "setup:win32": "pnpm install && pnpm run build:packages:ordered && pnpm run assemble:env:all",
    "setup": "run-script-os",
    "setup:dev": "bash scripts/setup-dev.sh",
    "setup:dev:clean": "bash scripts/setup-dev.sh --clean",
    "build:packages": "pnpm -r --filter \"./packages/**\" run build",
    "build:packages:ordered": "pnpm --filter @dentalos/shared-types run build && pnpm --filter @dentalos/shared-domain run build && pnpm --filter @dentalos/shared-auth run build && pnpm --filter @dentalos/shared-errors run build && pnpm --filter @dentalos/shared-validation run build && pnpm --filter @dentalos/shared-events run build && pnpm --filter @dentalos/shared-security run build && pnpm --filter @dentalos/shared-infra run build && pnpm --filter @dentalos/shared-tracing run build && pnpm --filter @dentalos/shared-testing run build",
    "bootstrap:dev": "pnpm install && pnpm setup:dev",
    "docker:dev": "./launch_docker.sh dev",
    "docker:local": "./launch_docker.sh local",
    "docker:docker": "./launch_docker.sh docker",
    "docker:down": "./launch_docker.sh down",
    "docker:install": "./launch_docker.sh --install",
    "docker:start": "./launch-app-docker.sh",
    "docker:start:debug": "./launch-app-docker.sh --debug",
    "docker:start:reset": "./launch-app-docker.sh --reset",
    "docker:stop": "docker compose -f docker-compose.dev.yml down",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "nx run-many --target=typecheck --all",
    "graph": "nx graph",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint",
    "build:services": "nx run-many --target=build --projects=backend-auth,backend-patient-service,backend-scheduling,backend-enterprise-service,backend-billing-service,backend-inventory-service,backend-clinical",
    "build:services:local": "pnpm -r --filter @dentalos/backend-auth --filter @dentalos/backend-patient-service --filter @dentalos/backend-scheduling --filter @dentalos/backend-enterprise-service --filter @dentalos/backend-billing-service --filter @dentalos/backend-inventory-service --filter @dentalos/backend-clinical run build",
    "dev:bootstrap-run": "pnpm setup:dev && pnpm build:services && pnpm run dev:backend",
    "dev": "concurrently -n \"auth,clinic\" -c \"cyan,blue\" \"pnpm start:auth\" \"pnpm start:clinic\"",
    "dev:core": "concurrently -n \"auth,patient,scheduling,enterprise\" -c \"cyan,green,yellow,magenta\" \"pnpm start:auth\" \"pnpm start:patient\" \"pnpm start:scheduling\" \"pnpm start:enterprise\"",
    "dev:backend": "pnpm setup:dev && pnpm build:services && concurrently -n \"auth,patient,scheduling,enterprise,billing,inventory,clinical\" -c \"cyan,green,yellow,magenta,blue,red,white\" \"pnpm start:auth\" \"pnpm start:patient\" \"pnpm start:scheduling\" \"pnpm start:enterprise\" \"pnpm start:billing\" \"pnpm start:inventory\" \"pnpm start:clinical\"",
    "dev:backend:local": "pnpm setup:dev && pnpm build:services:local && concurrently -n \"auth,patient,scheduling,enterprise,billing,inventory,clinical\" -c \"cyan,green,yellow,magenta,blue,red,white\" \"pnpm start:auth\" \"pnpm start:patient\" \"pnpm start:scheduling\" \"pnpm start:enterprise\" \"pnpm start:billing\" \"pnpm start:inventory\" \"pnpm start:clinical\"",
    "start:auth": "cd apps/backend-auth && pnpm start:dev",
    "start:patient": "cd apps/backend-patient-service && pnpm start:dev",
    "start:scheduling": "cd apps/backend-scheduling && pnpm start:dev",
    "start:enterprise": "cd apps/backend-enterprise-service && pnpm start:dev",
    "start:billing": "cd apps/backend-billing-service && pnpm start:dev",
    "start:inventory": "cd apps/backend-inventory-service && pnpm start:dev",
    "start:clinical": "cd apps/backend-clinical && pnpm start:dev",
    "start:provider": "cd apps/backend-provider-schedule && pnpm start:dev",
    "start:realtime": "cd apps/backend-realtime-service && pnpm start:dev",
    "start:offline-sync": "cd apps/backend-offline-sync-service && pnpm start:dev",
    "start:patient-portal": "cd apps/backend-patient-portal-gateway && pnpm start:dev",
    "start:subscription": "cd apps/backend-subscription-service && pnpm start:dev",
    "start:clinic": "cd apps/web-clinic-portal && pnpm dev"
  },
  "keywords": [
    "dental",
    "practice-management",
    "healthcare",
    "microservices",
    "nx",
    "nestjs",
    "react"
  ],
  "author": "Dental OS Team",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@nx/eslint-plugin": "^22.1.0",
    "@nx/js": "^22.1.0",
    "@nx/nest": "^22.1.0",
    "@nx/node": "^22.1.0",
    "@nx/react": "^22.1.0",
    "@nx/react-native": "^22.1.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "nodemon": "^3.1.9",
    "nx": "^22.1.0",
    "prettier": "^3.4.2",
    "run-script-os": "^1.1.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "compression": "^1.8.1",
    "dataloader": "^2.2.3",
    "mongoose": "^9.0.0",
    "prom-client": "^15.1.3",
    "tslib": "^2.8.1"
  }
}
