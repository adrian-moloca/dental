{
  "name": "@dentalos/backend-auth",
  "version": "0.1.0",
  "description": "DentalOS Authentication & Authorization Microservice",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:watch": "nodemon --watch src -e ts --exec ts-node -r tsconfig-paths/register src/main.ts",
    "start:prod": "node dist/apps/backend-auth/src/main.js",
    "seed:users": "ts-node -r tsconfig-paths/register src/database/seed-users.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "vitest run --config test/vitest.config.ts",
    "test:unit": "vitest run --config test/vitest.config.ts test/unit",
    "test:integration": "vitest run --config test/vitest.e2e.config.ts test/integration",
    "test:e2e": "vitest run --config test/vitest.e2e.config.ts",
    "test:watch": "vitest watch --config test/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config test/vitest.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dentalos/shared-auth": "workspace:*",
    "@dentalos/shared-domain": "workspace:*",
    "@dentalos/shared-errors": "workspace:*",
    "@dentalos/shared-events": "workspace:*",
    "@dentalos/shared-infra": "workspace:*",
    "@dentalos/shared-security": "workspace:*",
    "@dentalos/shared-testing": "workspace:*",
    "@dentalos/shared-tracing": "workspace:*",
    "@dentalos/shared-types": "workspace:*",
    "@dentalos/shared-validation": "workspace:*",
    "@nest-lab/throttler-storage-redis": "^1.1.0",
    "@nestjs/axios": "^3.1.3",
    "@nestjs/cache-manager": "^2.1.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/event-emitter": "^2.0.3",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/terminus": "^10.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^10.0.1",
    "@node-rs/argon2": "^2.0.2",
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.13.2",
    "cache-manager": "^5.2.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "otplib": "^12.0.1",
    "opossum": "^7.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "twilio": "^5.10.6",
    "typeorm": "^0.3.19",
    "ua-parser-js": "^2.0.6",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.6",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "ioredis-mock": "^8.9.0",
    "nodemon": "^3.0.2",
    "pg-mem": "^2.8.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "testcontainers": "^10.5.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
