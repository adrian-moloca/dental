# Example Kubernetes Secret
# DO NOT commit this file with real values
# Use Sealed Secrets, External Secrets Operator, or Vault in production

apiVersion: v1
kind: Secret
metadata:
  name: backend-enterprise-service-secrets
  namespace: dentalos
  labels:
    app: backend-enterprise-service
type: Opaque
stringData:
  # MongoDB connection string (base64 encoded in actual secret)
  MONGODB_URI: "mongodb+srv://user:password@cluster.mongodb.net/enterprise?retryWrites=true&w=majority"

  # Redis password
  REDIS_PASSWORD: "your-redis-password-here"

# To create the actual secret, use:
# kubectl create secret generic backend-enterprise-service-secrets \
#   --from-literal=MONGODB_URI='mongodb+srv://...' \
#   --from-literal=REDIS_PASSWORD='...' \
#   --namespace=dentalos

# Or use base64 encoding:
# echo -n 'your-value' | base64
# Then add to data: field instead of stringData:
