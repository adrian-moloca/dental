{
  "name": "@dentalos/backend-clinical",
  "version": "0.1.0",
  "description": "Clinical EHR Microservice for Dental OS",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:watch": "nodemon --watch src -e ts --exec ts-node -r tsconfig-paths/register src/main.ts",
    "start:prod": "node dist/apps/backend-clinical/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "vitest run --config test/vitest.config.ts",
    "test:unit": "vitest run --config test/vitest.config.ts test/unit",
    "test:integration": "vitest run --config test/vitest.e2e.config.ts test/integration",
    "test:e2e": "vitest run --config test/vitest.e2e.config.ts",
    "test:watch": "vitest watch --config test/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config test/vitest.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dentalos/shared-auth": "workspace:*",
    "@dentalos/shared-domain": "workspace:*",
    "@dentalos/shared-errors": "workspace:*",
    "@dentalos/shared-events": "workspace:*",
    "@dentalos/shared-infra": "workspace:*",
    "@dentalos/shared-security": "workspace:*",
    "@dentalos/shared-types": "workspace:*",
    "@dentalos/shared-validation": "workspace:*",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.2.0",
    "@nestjs/throttler": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dataloader": "^2.2.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "mongoose": "^8.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.14.0",
    "prom-client": "^15.1.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/passport-jwt": "^4.0.0",
    "@types/pdfkit": "^0.13.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "type": "commonjs"
}
