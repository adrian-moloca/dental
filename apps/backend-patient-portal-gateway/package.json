{
  "name": "@dentalos/backend-patient-portal-gateway",
  "version": "0.1.0",
  "description": "DentalOS Patient Portal API Gateway / BFF",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "vitest run --config test/vitest.config.ts",
    "test:unit": "vitest run --config test/vitest.config.ts test/unit",
    "test:integration": "vitest run --config test/vitest.e2e.config.ts test/integration",
    "test:e2e": "vitest run --config test/vitest.e2e.config.ts",
    "test:watch": "vitest watch --config test/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config test/vitest.config.ts",
    "test:coverage:e2e": "vitest run --coverage --config test/vitest.e2e.config.ts",
    "test:debug": "vitest --inspect-brk --no-file-parallelism --config test/vitest.config.ts",
    "test:ui": "vitest --ui --config test/vitest.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dentalos/shared-auth": "workspace:*",
    "@dentalos/shared-domain": "workspace:*",
    "@dentalos/shared-errors": "workspace:*",
    "@dentalos/shared-security": "workspace:*",
    "@dentalos/shared-types": "workspace:*",
    "@dentalos/shared-validation": "workspace:*",
    "@nestjs/axios": "^3.0.1",
    "@nestjs/cache-manager": "^2.1.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/terminus": "^10.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nest-lab/throttler-storage-redis": "^1.1.0",
    "axios": "^1.6.5",
    "axios-retry": "^4.0.0",
    "cache-manager": "^5.2.4",
    "cache-manager-ioredis-yet": "^2.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "ioredis-mock": "^8.9.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
